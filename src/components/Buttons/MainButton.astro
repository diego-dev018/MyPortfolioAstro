---
interface Props {
	link: string;
}

const { link } = Astro.props;
---

<section class="flex items-center justify-center">
    <a href=`${link}` target="_blank" class="w-fit justify-center items-center bg-gray-800 pt-1 pb-1 pl-3 pr-3 rounded-2xl hover:scale-105 hover:bg-slate-700 transition-all text-white">
        <slot />
    </a>
</section>